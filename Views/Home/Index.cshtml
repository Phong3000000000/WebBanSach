        </div>
        <div class="row">
            @foreach (var book in Model.FeaturedBooks)
            {
                @Html.Partial("_BookItemPartial", book)
            }
        </div>
    </div>
</section>

<section id="popular-books" class="bookshelf py-5 my-5">
